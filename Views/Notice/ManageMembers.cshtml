@model IEnumerable<object>
@{
    ViewData["Title"] = "Manage Member Phone Numbers";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-users me-2"></i>Manage Member Phone Numbers
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> Add phone numbers for members to enable bulk SMS notifications when notices are published.
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-user me-1"></i>Member Name</th>
                                    <th><i class="fas fa-envelope me-1"></i>Email</th>
                                    <th><i class="fas fa-phone me-1"></i>Phone Number</th>
                                    <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic member in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@member.Name</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted">@member.Email</span>
                                        </td>
                                        <td>
                                            <span id="phone-@member.Id" class="@(member.HasPhone ? "text-success" : "text-danger")">
                                                @(member.HasPhone ? member.PhoneNumber : "No phone number")
                                            </span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary" 
                                                    onclick="editPhone('@member.Id', '@member.PhoneNumber', '@member.Name')">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary -->
                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-phone me-2"></i>With Phone</h5>
                                        <h3 id="withPhoneCount">@Model.Count(m => ((dynamic)m).HasPhone)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning text-dark">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Without Phone</h5>
                                        <h3 id="withoutPhoneCount">@Model.Count(m => !((dynamic)m).HasPhone)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-users me-2"></i>Total Members</h5>
                                        <h3>@Model.Count()</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Back Button -->
                    <div class="text-center mt-4">
                        <a href="@Url.Action("AllNotices")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to All Notices
                        </a>
                        <a href="@Url.Action("TestSms")" class="btn btn-primary ms-2">
                            <i class="fas fa-sms me-2"></i>Test SMS
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Phone Modal -->
<div class="modal fade" id="editPhoneModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-phone me-2"></i>Edit Phone Number
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editPhoneForm">
                    <input type="hidden" id="editUserId" />
                    <div class="mb-3">
                        <label for="editMemberName" class="form-label">Member Name</label>
                        <input type="text" class="form-control" id="editMemberName" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="editPhoneNumber" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="editPhoneNumber" 
                               placeholder="01712345678" required />
                        <div class="form-text">Enter Bangladesh phone number (e.g., 01712345678)</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="savePhoneNumber()">
                    <i class="fas fa-save me-1"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editPhone(userId, phoneNumber, memberName) {
            $('#editUserId').val(userId);
            $('#editMemberName').val(memberName);
            $('#editPhoneNumber').val(phoneNumber);
            $('#editPhoneModal').modal('show');
        }

        function savePhoneNumber() {
            const userId = $('#editUserId').val();
            const phoneNumber = $('#editPhoneNumber').val();
            const memberName = $('#editMemberName').val();

            if (!phoneNumber.trim()) {
                alert('Please enter a phone number');
                return;
            }

            $.post('@Url.Action("UpdateMemberPhone")', {
                userId: userId,
                phoneNumber: phoneNumber
            }, function(data) {
                if (data.Success) {
                    // Update the display
                    const phoneElement = $(`#phone-${userId}`);
                    phoneElement.text(phoneNumber);
                    phoneElement.removeClass('text-danger').addClass('text-success');
                    
                    // Update counts
                    updateCounts();
                    
                    // Close modal
                    $('#editPhoneModal').modal('hide');
                    
                    // Show success message
                    alert('Phone number updated successfully!');
                } else {
                    alert('Error: ' + data.Message);
                }
            }).fail(function() {
                alert('Failed to update phone number');
            });
        }

        function updateCounts() {
            const withPhone = $('.text-success').length;
            const withoutPhone = $('.text-danger').length;
            
            $('#withPhoneCount').text(withPhone);
            $('#withoutPhoneCount').text(withoutPhone);
        }
    </script>
} 