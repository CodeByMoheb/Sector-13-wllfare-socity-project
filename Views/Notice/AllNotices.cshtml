@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Notice>
@{
    ViewData["Title"] = "All Notices";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-bullhorn me-2"></i>All Notices Management</h2>
        <div>
            <a class="btn btn-secondary me-2" href="@Url.Action("PublicList")">
                <i class="fas fa-eye me-2"></i>View Public Notices
            </a>
            <a class="btn btn-primary" href="@Url.Action("Create")">
                <i class="fas fa-plus me-2"></i>Create Notice
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            <strong>No notices found in the system.</strong> Create the first notice to get started.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Notice Management
                    </h5>
                    <div class="d-flex gap-2">
                        <span class="badge bg-success">@Model.Count(n => n.IsApproved) Approved</span>
                        <span class="badge bg-warning text-dark">@Model.Count(n => !n.IsApproved) Pending</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-heading me-1"></i>Title</th>
                                <th><i class="fas fa-user me-1"></i>Created By</th>
                                <th><i class="fas fa-calendar me-1"></i>Created At</th>
                                <th><i class="fas fa-clock me-1"></i>Status</th>
                                <th><i class="fas fa-user-check me-1"></i>Approved By</th>
                                <th><i class="fas fa-calendar-check me-1"></i>Approved At</th>
                                <th><i class="fas fa-cogs me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var notice in Model) {
                            <tr class="@(notice.IsApproved ? "table-success" : "table-warning")">
                                <td>
                                    <strong>@notice.Title</strong>
                                    <br>
                                    <small class="text-muted">
                                        @if (notice.Content.Length > 50)
                                        {
                                            @(notice.Content.Substring(0, 50) + "...")
                                        }
                                        else
                                        {
                                            @notice.Content
                                        }
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@notice.CreatedBy</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @notice.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                </td>
                                <td>
                                    @if (notice.IsApproved) {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Approved
                                        </span>
                                    } else {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(notice.ApprovedBy))
                                    {
                                        <span class="badge bg-success">@notice.ApprovedBy</span>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td>
                                    @if (notice.ApprovedAt.HasValue)
                                    {
                                        <small class="text-muted">
                                            @notice.ApprovedAt.Value.ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                data-bs-toggle="modal" data-bs-target="#noticeModal@(notice.Id)">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        @if (!notice.IsApproved)
                                        {
                                            <form asp-action="Approve" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@notice.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" 
                                                        onclick="return confirm('Are you sure you want to approve this notice?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                            
                            <!-- Modal for each notice -->
                            <div class="modal fade" id="noticeModal@(notice.Id)" tabindex="-1" aria-labelledby="noticeModalLabel@(notice.Id)" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title" id="noticeModalLabel@(notice.Id)">
                                                <i class="fas fa-bullhorn me-2"></i>@notice.Title
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <strong><i class="fas fa-user me-1"></i>Created By:</strong>
                                                    <span class="badge bg-info">@notice.CreatedBy</span>
                                                </div>
                                                <div class="col-md-6">
                                                    <strong><i class="fas fa-calendar me-1"></i>Created At:</strong>
                                                    <span class="text-muted">@notice.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</span>
                                                </div>
                                            </div>
                                            @if (notice.IsApproved)
                                            {
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <strong><i class="fas fa-user-check me-1"></i>Approved By:</strong>
                                                        <span class="badge bg-success">@notice.ApprovedBy</span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fas fa-calendar-check me-1"></i>Approved At:</strong>
                                                        <span class="text-muted">@notice.ApprovedAt?.ToString("MMM dd, yyyy 'at' HH:mm")</span>
                                                    </div>
                                                </div>
                                            }
                                            <hr>
                                            <div class="mb-3">
                                                <strong><i class="fas fa-file-text me-1"></i>Content:</strong>
                                                <div class="mt-2 p-3 bg-light rounded">
                                                    @Html.Raw(notice.Content.Replace("\n", "<br>"))
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                <i class="fas fa-times me-1"></i>Close
                                            </button>
                                            @if (!notice.IsApproved)
                                            {
                                                <form asp-action="Approve" method="post" style="display:inline">
                                                    <input type="hidden" name="id" value="@notice.Id" />
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-check me-1"></i>Approve Notice
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div> 