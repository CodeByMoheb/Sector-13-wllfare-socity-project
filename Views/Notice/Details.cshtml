@model Sector_13_Welfare_Society___Digital_Management_System.Models.Notice
@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}

<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("PublicList")">
                            <i class="fas fa-bullhorn me-1"></i>Notices
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h3 mb-0">
                                <i class="fas fa-bullhorn me-2"></i>@Model.Title
                            </h1>
                            <small class="text-light">
                                <i class="fas fa-check-circle me-1"></i>Officially Approved Notice
                            </small>
                        </div>
                        <span class="badge bg-light text-primary fs-6">
                            <i class="fas fa-check-circle me-1"></i>Approved
                        </span>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user text-primary me-2"></i>
                                <strong>Created By:</strong>
                                <span class="ms-2 badge bg-info">@Model.CreatedBy</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar text-primary me-2"></i>
                                <strong>Created:</strong>
                                <span class="ms-2 text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user-check text-success me-2"></i>
                                <strong>Approved By:</strong>
                                <span class="ms-2 badge bg-success">@Model.ApprovedBy</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar-check text-success me-2"></i>
                                <strong>Approved:</strong>
                                <span class="ms-2 text-muted">@Model.ApprovedAt?.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="notice-content">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-file-text me-2"></i>Notice Content
                        </h5>
                        <div class="p-4 bg-light rounded">
                            <div class="notice-text">
                                @Html.Raw(Model.Content.Replace("\n", "<br>"))
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("PublicList")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Notices
                        </a>
                        <div class="text-muted small">
                            <i class="fas fa-clock me-1"></i>
                            Last updated: @Model.ApprovedAt?.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .notice-content {
        font-size: 1.1rem;
        line-height: 1.8;
    }
    
    .notice-text {
        white-space: pre-line;
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .breadcrumb {
        background: transparent;
        padding: 0;
        margin-bottom: 2rem;
    }
    
    .breadcrumb-item a {
        color: #5b3fa2;
        text-decoration: none;
    }
    
    .breadcrumb-item a:hover {
        color: #3d2a6b;
        text-decoration: underline;
    }
</style> 