@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Notice>
@{
    ViewData["Title"] = "Notices";
    Layout = "_Layout";
}

<div class="container mt-5 pt-4">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-bullhorn me-3"></i>Official Notices
                </h1>
                <p class="lead text-muted">Stay updated with the latest announcements from Sector 13 Welfare Society</p>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>No notices available at the moment.</strong> Check back later for updates.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var notice in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-bullhorn me-2"></i>@notice.Title
                                </h5>
                                <span class="badge bg-light text-primary">
                                    <i class="fas fa-check-circle me-1"></i>Approved
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                @if (notice.Content.Length > 200)
                                {
                                    <p class="card-text">@(notice.Content.Substring(0, 200) + "...")</p>
                                }
                                else
                                {
                                    <p class="card-text">@notice.Content</p>
                                }
                            </div>
                            
                            <div class="row text-muted small mb-3">
                                <div class="col-6">
                                    <i class="fas fa-user me-1"></i>
                                    <strong>By:</strong> @notice.CreatedBy
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-calendar me-1"></i>
                                    <strong>Approved:</strong> @notice.ApprovedAt?.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <a href="@Url.Action("Details", new { id = notice.Id })" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-eye me-1"></i>Read Full Notice
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .card-footer {
        border-top: none;
        background: transparent;
    }
</style> 