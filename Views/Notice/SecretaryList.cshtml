@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Notice>
@{
    ViewData["Title"] = "Pending Notices";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock me-2"></i>Pending Notices for Approval</h2>
        <a class="btn btn-secondary" href="@Url.Action("PublicList")">
            <i class="fas fa-eye me-2"></i>View Published Notices
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["SmsSuccess"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-sms me-2"></i>@TempData["SmsSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["SmsWarning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["SmsWarning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Great!</strong> All notices have been approved. No pending notices found.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @Model.Count() Notice(s) Awaiting Approval
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-heading me-1"></i>Title</th>
                                <th><i class="fas fa-file-text me-1"></i>Content</th>
                                <th><i class="fas fa-user me-1"></i>Created By</th>
                                <th><i class="fas fa-calendar me-1"></i>Created At</th>
                                <th><i class="fas fa-cogs me-1"></i>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var notice in Model) {
                            <tr>
                                <td>
                                    <strong>@notice.Title</strong>
                                </td>
                                <td>
                                    @if (notice.Content.Length > 150)
                                    {
                                        @(notice.Content.Substring(0, 150) + "...")
                                    }
                                    else
                                    {
                                        @notice.Content
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@notice.CreatedBy</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @notice.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                data-bs-toggle="modal" data-bs-target="#noticeModal@(notice.Id)">
                                            <i class="fas fa-eye me-1"></i>View
                                        </button>
                                        <form asp-action="Approve" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@notice.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" 
                                                    onclick="return confirm('Are you sure you want to approve this notice?')">
                                                <i class="fas fa-check me-1"></i>Approve
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            
                            <!-- Modal for each notice -->
                            <div class="modal fade" id="noticeModal@(notice.Id)" tabindex="-1" aria-labelledby="noticeModalLabel@(notice.Id)" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title" id="noticeModalLabel@(notice.Id)">
                                                <i class="fas fa-bullhorn me-2"></i>@notice.Title
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <strong><i class="fas fa-user me-1"></i>Created By:</strong>
                                                    <span class="badge bg-info">@notice.CreatedBy</span>
                                                </div>
                                                <div class="col-md-6">
                                                    <strong><i class="fas fa-calendar me-1"></i>Created At:</strong>
                                                    <span class="text-muted">@notice.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</span>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="mb-3">
                                                <strong><i class="fas fa-file-text me-1"></i>Content:</strong>
                                                <div class="mt-2 p-3 bg-light rounded">
                                                    @notice.Content
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                <i class="fas fa-times me-1"></i>Close
                                            </button>
                                            <form asp-action="Approve" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@notice.Id" />
                                                <button type="submit" class="btn btn-success">
                                                    <i class="fas fa-check me-1"></i>Approve Notice
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div> 