@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Notice>
@{
    ViewData["Title"] = "Pending Notices";
    Layout = "_DashboardLayout";
}
<div class="container mt-4">
    <h2>Pending Notices</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Created By</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var notice in Model) {
            <tr>
                <td>@notice.Title</td>
                <td>@notice.Content</td>
                <td>@notice.CreatedBy</td>
                <td>@notice.CreatedAt.ToString("g")</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@notice.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 