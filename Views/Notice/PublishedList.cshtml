@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Notice>
@{
    ViewData["Title"] = "Published Notices";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-check-circle me-2"></i>Published Notices</h2>
        <a class="btn btn-secondary" href="@Url.Action("SecretaryList")">
            <i class="fas fa-clock me-2"></i>View Pending Notices
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No published notices found.</div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-check me-2"></i>@Model.Count() Published Notice(s)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Created By</th>
                                <th>Approved At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var notice in Model)
                        {
                            <tr>
                                <td><strong>@notice.Title</strong></td>
                                <td>
                                    @if ((notice.Content?.Length ?? 0) > 150)
                                    {
                                        @(notice.Content.Substring(0, 150) + "...")
                                    }
                                    else
                                    {
                                        @notice.Content
                                    }
                                </td>
                                <td><span class="badge bg-info">@notice.CreatedBy</span></td>
                                <td><small class="text-muted">@notice.ApprovedAt?.ToString("MMM dd, yyyy HH:mm")</small></td>
                                <td>
                                    <form asp-action="Delete" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@notice.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Delete this published notice? This cannot be undone.')">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

