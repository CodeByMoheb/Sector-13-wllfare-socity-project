@model IEnumerable<SheetMember>
@{
    ViewData["Title"] = "Manage Sheet Members";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-users me-2"></i>Manage Sheet Members
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> These members are imported from sheet files and will receive SMS notifications when notices are published.
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-user me-1"></i>Member Name</th>
                                    <th><i class="fas fa-phone me-1"></i>Phone Number</th>
                                    <th><i class="fas fa-calendar me-1"></i>Created At</th>
                                    <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@member.Name</strong>
                                        </td>
                                        <td>
                                            <span id="phone-@member.Id" class="@(member.HasPhoneNumber ? "text-success" : "text-danger")">
                                                @(member.HasPhoneNumber ? member.PhoneNumber : "No phone number")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@member.CreatedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary me-1" 
                                                    onclick="editPhone(@member.Id, '@member.PhoneNumber', '@member.Name')">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteMember(@member.Id, '@member.Name')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary -->
                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-phone me-2"></i>With Phone</h5>
                                        <h3 id="withPhoneCount">@Model.Count(m => m.HasPhoneNumber)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning text-dark">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Without Phone</h5>
                                        <h3 id="withoutPhoneCount">@Model.Count(m => !m.HasPhoneNumber)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5><i class="fas fa-users me-2"></i>Total Members</h5>
                                        <h3>@Model.Count()</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Test SMS Section -->
                    <div class="mt-4">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-sms me-2"></i>Test SMS to Sheet Members</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label for="testMessage" class="form-label">Test Message</label>
                                            <input type="text" class="form-control" id="testMessage" 
                                                   placeholder="Enter test message..." />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-primary mt-4" onclick="testBulkSms()">
                                            <i class="fas fa-paper-plane me-2"></i>Send Test SMS
                                        </button>
                                    </div>
                                </div>
                                <div id="testResult" class="mt-3"></div>
                                
                                <!-- Debug Section -->
                                <div class="mt-3">
                                    <hr>
                                    <h6><i class="fas fa-bug me-2"></i>Debug Tools</h6>
                                    <button type="button" class="btn btn-info me-2" onclick="debugSheetMemberSms()">
                                        <i class="fas fa-bug me-2"></i>Debug Sheet Member SMS
                                    </button>
                                    <button type="button" class="btn btn-warning me-2" onclick="testNoticeApprovalSms()">
                                        <i class="fas fa-bell me-2"></i>Test Notice Approval SMS
                                    </button>
                                    <div id="debugResult" class="mt-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <div class="text-center mt-4">
                        <a href="@Url.Action("ImportPhoneNumbers")" class="btn btn-primary">
                            <i class="fas fa-upload me-2"></i>Import New Sheet
                        </a>
                        <a href="@Url.Action("AllNotices")" class="btn btn-secondary ms-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to All Notices
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Phone Modal -->
<div class="modal fade" id="editPhoneModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-phone me-2"></i>Edit Phone Number
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editPhoneForm">
                    <input type="hidden" id="editUserId" />
                    <div class="mb-3">
                        <label for="editMemberName" class="form-label">Member Name</label>
                        <input type="text" class="form-control" id="editMemberName" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="editPhoneNumber" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="editPhoneNumber" 
                               placeholder="01712345678" required />
                        <div class="form-text">Enter Bangladesh phone number (e.g., 01712345678)</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="savePhoneNumber()">
                    <i class="fas fa-save me-1"></i>Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editPhone(userId, phoneNumber, memberName) {
            $('#editUserId').val(userId);
            $('#editMemberName').val(memberName);
            $('#editPhoneNumber').val(phoneNumber);
            $('#editPhoneModal').modal('show');
        }

        function savePhoneNumber() {
            const userId = $('#editUserId').val();
            const phoneNumber = $('#editPhoneNumber').val();
            const memberName = $('#editMemberName').val();

            if (!phoneNumber.trim()) {
                alert('Please enter a phone number');
                return;
            }

            $.post('@Url.Action("UpdateSheetMemberPhone")', {
                id: userId,
                phoneNumber: phoneNumber
            }, function(data) {
                if (data.Success) {
                    // Update the display
                    const phoneElement = $(`#phone-${userId}`);
                    phoneElement.text(phoneNumber);
                    phoneElement.removeClass('text-danger').addClass('text-success');
                    
                    // Update counts
                    updateCounts();
                    
                    // Close modal
                    $('#editPhoneModal').modal('hide');
                    
                    // Show success message
                    alert('Phone number updated successfully!');
                } else {
                    alert('Error: ' + data.Message);
                }
            }).fail(function() {
                alert('Failed to update phone number');
            });
        }

        function deleteMember(userId, memberName) {
            if (confirm(`Are you sure you want to delete ${memberName}?`)) {
                $.post('@Url.Action("DeleteSheetMember")', {
                    id: userId
                }, function(data) {
                    if (data.Success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.Message);
                    }
                }).fail(function() {
                    alert('Failed to delete member');
                });
            }
        }

        function testBulkSms() {
            const message = $('#testMessage').val();
            if (!message.trim()) {
                alert('Please enter a test message');
                return;
            }

            $('#testResult').html('<div class="alert alert-info"><i class="fas fa-spinner fa-spin me-2"></i>Sending test SMS...</div>');

            $.get('@Url.Action("TestBulkSmsToSheetMembers")', { message: message }, function(data) {
                if (data.Success) {
                    $('#testResult').html(`<div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>Test SMS sent successfully to ${data.Count} members!
                        <br><small>Message: ${data.MessageContent}</small>
                    </div>`);
                } else {
                    $('#testResult').html(`<div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Failed to send test SMS: ${data.Message || data.Error}
                    </div>`);
                }
            }).fail(function() {
                $('#testResult').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Failed to send test SMS</div>');
            });
        }

        function updateCounts() {
            const withPhone = $('.text-success').length;
            const withoutPhone = $('.text-danger').length;
            
            $('#withPhoneCount').text(withPhone);
            $('#withoutPhoneCount').text(withoutPhone);
        }

        function debugSheetMemberSms() {
            $('#debugResult').html('<div class="alert alert-info"><i class="fas fa-spinner fa-spin me-2"></i>Debugging sheet member SMS...</div>');
            
            $.get('@Url.Action("DebugSheetMemberSms")', function(data) {
                if (data.Success) {
                    let resultHtml = '<div class="alert alert-success"><h6>Sheet Member SMS Debug Results:</h6>';
                    resultHtml += '<ul>';
                    resultHtml += `<li><strong>Total Sheet Members:</strong> ${data.AllSheetMembers}</li>`;
                    resultHtml += `<li><strong>Members with Phones:</strong> ${data.SheetMembersWithPhones}</li>`;
                    resultHtml += `<li><strong>SMS Service Enabled:</strong> ${data.SmsServiceEnabled}</li>`;
                    resultHtml += `<li><strong>Balance:</strong> ${data.Balance}</li>`;
                    resultHtml += `<li><strong>Test Result:</strong> ${data.TestResult ? 'Success' : 'Failed'}</li>`;
                    resultHtml += '</ul>';
                    
                    if (data.PhoneNumbers && data.PhoneNumbers.length > 0) {
                        resultHtml += '<h6>Phone Numbers:</h6><ul>';
                        data.PhoneNumbers.forEach(function(member) {
                            resultHtml += `<li>${member.Name}: ${member.Phone}</li>`;
                        });
                        resultHtml += '</ul>';
                    }
                    
                    resultHtml += '</div>';
                    $('#debugResult').html(resultHtml);
                } else {
                    $('#debugResult').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Error: ' + (data.Error || 'Unknown error') + '</div>');
                }
            }).fail(function() {
                $('#debugResult').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Failed to debug sheet member SMS</div>');
            });
        }

        function testNoticeApprovalSms() {
            $('#debugResult').html('<div class="alert alert-info"><i class="fas fa-spinner fa-spin me-2"></i>Testing notice approval SMS process...</div>');
            
            $.get('@Url.Action("TestNoticeApprovalSms")', function(data) {
                if (data.Success) {
                    let resultHtml = '<div class="alert alert-success"><h6>Notice Approval SMS Test Results:</h6>';
                    resultHtml += `<p><strong>Message:</strong> ${data.Message}</p>`;
                    resultHtml += `<p><strong>Test Notice:</strong> ${data.TestNotice.Title} - ${data.TestNotice.Content}</p>`;
                    resultHtml += '<p><em>Check the application logs for detailed SMS sending information.</em></p>';
                    resultHtml += '</div>';
                    $('#debugResult').html(resultHtml);
                } else {
                    $('#debugResult').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Error: ' + (data.Error || 'Unknown error') + '</div>');
                }
            }).fail(function() {
                $('#debugResult').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Failed to test notice approval SMS</div>');
            });
        }
    </script>
} 