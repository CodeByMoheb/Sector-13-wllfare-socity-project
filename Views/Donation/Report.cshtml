@model Sector_13_Welfare_Society___Digital_Management_System.Models.DonationReportViewModel
@{
    ViewData["Title"] = "Donation Insights";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title"><i class="fas fa-donate me-2"></i>Donation Insights</h3>
                    <form class="d-flex gap-2" method="get">
                        <input type="date" name="StartDate" class="form-control form-control-sm" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")"/>
                        <input type="date" name="EndDate" class="form-control form-control-sm" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")"/>
                        <select name="PaymentMethod" class="form-select form-select-sm">
                            <option value="">All Methods</option>
                            @foreach (var m in Model.AvailablePaymentMethods) {
                                <option value="@m" selected="@(Model.Filter.PaymentMethod==m)">@m</option>
                            }
                        </select>
                        <select name="Status" class="form-select form-select-sm">
                            <option value="">All Status</option>
                            @foreach (var s in Model.AvailableStatuses) {
                                <option value="@s" selected="@(Model.Filter.Status==s)">@s</option>
                            }
                        </select>
                        <select name="DonationType" class="form-select form-select-sm">
                            <option value="">All Types</option>
                            @foreach (var t in Model.AvailableTypes) {
                                <option value="@t" selected="@(Model.Filter.DonationType==t)">@t</option>
                            }
                        </select>
                        <input type="text" name="Search" class="form-control form-control-sm" placeholder="Search name/email/phone/txn" value="@Model.Filter.Search"/>
                        <button class="btn btn-sm btn-primary"><i class="fas fa-filter me-1"></i>Filter</button>
                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Report","Donation")">Reset</a>
                    </form>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="p-3 rounded border bg-light">
                                <div class="text-muted">Total Received</div>
                                <div class="fs-4 fw-bold text-success">৳ @Model.TotalAmount.ToString("N2")</div>
                                <div class="small text-muted">@Model.TotalCount donation(s) • Avg ৳@Model.AveragePerDonation.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 rounded border bg-light">
                                <div class="text-muted">Today</div>
                                <div class="fs-5 fw-bold">৳ @Model.TodayAmount.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 rounded border bg-light">
                                <div class="text-muted">This Week</div>
                                <div class="fs-5 fw-bold">৳ @Model.ThisWeekAmount.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 rounded border bg-light">
                                <div class="text-muted">This Month</div>
                                <div class="fs-5 fw-bold">৳ @Model.ThisMonthAmount.ToString("N2")</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4 g-3">
                        <div class="col-lg-5">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-white fw-bold">Top Donors</div>
                                <div class="card-body p-0">
                                    <table class="table table-sm mb-0">
                                        <thead>
                                            <tr><th>Name</th><th class="text-end">Total</th><th class="text-end">Count</th></tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var d in Model.TopDonors) {
                                                <tr>
                                                    <td>
                                                        <div class="fw-bold">@d.Name</div>
                                                        <div class="small text-muted">@d.Phone • @d.Email</div>
                                                    </td>
                                                    <td class="text-end">৳ @d.TotalAmount.ToString("N2")</td>
                                                    <td class="text-end">@d.Donations</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-white fw-bold">Recent Donations</div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Donor</th>
                                                    <th>Contact</th>
                                                    <th>Type</th>
                                                    <th class="text-end">Amount</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var item in Model.Donations) {
                                                <tr>
                                                    <td>@item.DonationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        <div class="fw-bold">@item.Name</div>
                                                        <div class="small text-muted">@item.ReceiptNumber</div>
                                                    </td>
                                                    <td class="small">@item.Phone<br/>@item.Email</td>
                                                    <td>@(item.DonationType ?? "General")</td>
                                                    <td class="text-end">৳ @item.Amount.ToString("N2")</td>
                                                    <td>
                                                        @if (item.PaymentStatus == "Completed") { <span class="badge bg-success">Completed</span>; }
                                                        else if (item.PaymentStatus == "Pending") { <span class="badge bg-warning text-dark">Pending</span>; }
                                                        else { <span class="badge bg-danger">@item.PaymentStatus</span>; }
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <div class="small text-muted">Page @Model.Donations.PageIndex of @Model.Donations.TotalPages</div>
                                    <div>
                                        <a class="btn btn-sm btn-outline-secondary @(Model.Donations.HasPreviousPage?"":"disabled")" href="@Url.Action("Report","Donation", new { PageNumber = Model.Donations.PageIndex - 1, Model.Filter.StartDate, Model.Filter.EndDate, Model.Filter.PaymentMethod, Model.Filter.Status, Model.Filter.DonationType, Model.Filter.Search })">Prev</a>
                                        <a class="btn btn-sm btn-outline-secondary @(Model.Donations.HasNextPage?"":"disabled")" href="@Url.Action("Report","Donation", new { PageNumber = Model.Donations.PageIndex + 1, Model.Filter.StartDate, Model.Filter.EndDate, Model.Filter.PaymentMethod, Model.Filter.Status, Model.Filter.DonationType, Model.Filter.Search })">Next</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


