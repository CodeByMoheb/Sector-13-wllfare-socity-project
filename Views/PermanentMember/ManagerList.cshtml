@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.PermanentMember>
@{
    ViewData["Title"] = "Permanent Members";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-address-book me-2"></i>Permanent Members</h2>
        <div>
            <a class="btn btn-primary" href="@Url.Action("Create")"><i class="fas fa-plus me-1"></i>Add Member</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-light">
            <strong>Members (Name and Phone)</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Name</td>
                            <td>@m.PhoneNumber</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@m.Id"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@m.Id"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@m.Id" onclick="return confirm('Delete this member?')"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

