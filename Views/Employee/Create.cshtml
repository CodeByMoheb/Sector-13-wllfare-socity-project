@model Sector_13_Welfare_Society___Digital_Management_System.Models.Employee
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Employee";
    Layout = "_DashboardLayout";
    var roleList = ViewBag.RoleList as List<SelectListItem>;
}
<div class="container mt-4">
    <h2>Add Employee</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" class="form-select" asp-items="roleList">
                <option value="">-- Select Role --</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="JoiningDate" class="form-label"></label>
            <input asp-for="JoiningDate" class="form-control" type="date" />
            <span asp-validation-for="JoiningDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BaseSalary" class="form-label"></label>
            <input asp-for="BaseSalary" class="form-control" />
            <span asp-validation-for="BaseSalary" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsActive" class="form-label"></label>
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        </div>
        <button type="submit" class="btn btn-success">Add</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div> 