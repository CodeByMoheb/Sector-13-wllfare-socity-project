@model Sector_13_Welfare_Society___Digital_Management_System.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>
    <div class="alert alert-danger">Are you sure you want to delete this employee?</div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>
        <dt class="col-sm-2">Joining Date</dt>
        <dd class="col-sm-10">@Model.JoiningDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Base Salary</dt>
        <dd class="col-sm-10">@Model.BaseSalary.ToString("C")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div> 