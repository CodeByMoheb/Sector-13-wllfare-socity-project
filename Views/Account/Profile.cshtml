@model Sector_13_Welfare_Society___Digital_Management_System.Models.EditProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}
<style>
    .profile-main-container {
        padding-top: 120px; /* Adjust as needed for your navbar height */
    }
</style>
<div class="container profile-main-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.ExistingProfilePictureUrl) ? "/Photos/logo.png" : Model.ExistingProfilePictureUrl)" alt="Profile" class="rounded-circle" style="height:90px;width:90px;object-fit:cover;border:2px solid #e0e7ff;background:#f3e8ff;">
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Father's/Husband's Name</dt>
                        <dd class="col-sm-8">@Model.FathersOrHusbandsName</dd>
                        <dt class="col-sm-4">House No</dt>
                        <dd class="col-sm-8">@Model.HouseNo</dd>
                        <dt class="col-sm-4">Flat No</dt>
                        <dd class="col-sm-8">@Model.FlatNo</dd>
                        <dt class="col-sm-4">Road No</dt>
                        <dd class="col-sm-8">@Model.RoadNo</dd>
                        <dt class="col-sm-4">Ward</dt>
                        <dd class="col-sm-8">@Model.Ward</dd>
                        <dt class="col-sm-4">Holding</dt>
                        <dd class="col-sm-8">@Model.Holding</dd>
                        <dt class="col-sm-4">Sector</dt>
                        <dd class="col-sm-8">@Model.Sector</dd>
                        <dt class="col-sm-4">Profession</dt>
                        <dd class="col-sm-8">@Model.Profession</dd>
                        <dt class="col-sm-4">Designation</dt>
                        <dd class="col-sm-8">@Model.Designation</dd>
                        <dt class="col-sm-4">Blood Group</dt>
                        <dd class="col-sm-8">@Model.BloodGroup</dd>
                        <dt class="col-sm-4">Educational Qualification</dt>
                        <dd class="col-sm-8">@Model.EducationalQualification</dd>
                        <dt class="col-sm-4">Number of Children</dt>
                        <dd class="col-sm-8">@Model.NumberOfChildren</dd>
                        <dt class="col-sm-4">Telephone</dt>
                        <dd class="col-sm-8">@Model.Telephone</dd>
                        <dt class="col-sm-4">Mobile</dt>
                        <dd class="col-sm-8">@Model.Mobile</dd>
                        <dt class="col-sm-4">E-mail</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div> 
