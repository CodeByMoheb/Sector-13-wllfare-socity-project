@model Sector_13_Welfare_Society___Digital_Management_System.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
    <link rel="icon" type="image/x-icon" href="~/Photos/favicon.png" />
}

<style>
    body {
        background: #f0f2f5;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .fb-forgot-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        min-height: 100vh;
        justify-content: center;
    }
    .fb-forgot-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 32px 28px 24px 28px;
        width: 100%;
        max-width: 400px;
        margin-bottom: 20px;
    }
    .fb-logo {
        color: #1877f2;
        font-size: 3rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 16px;
        letter-spacing: -2px;
    }
    .fb-forgot-title {
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 18px;
        color: #1c1e21;
    }
    .form-control {
        border-radius: 6px;
        border: 1px solid #dddfe2;
        padding: 14px 16px;
        margin-bottom: 14px;
        font-size: 1rem;
        width: 100%;
    }
    .btn-submit {
        background: #1877f2;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 12px;
        font-weight: 600;
        width: 100%;
        font-size: 1.1rem;
        margin-bottom: 10px;
        transition: background 0.2s;
    }
    .btn-submit:hover {
        background: #166fe5;
    }
    .btn-back {
        background: #42b72a;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 12px;
        font-weight: 600;
        width: 100%;
        font-size: 1.1rem;
        margin-bottom: 10px;
        transition: background 0.2s;
        text-decoration: none;
        display: block;
        text-align: center;
    }
    .btn-back:hover {
        background: #36a420;
        color: #fff;
        text-decoration: none;
    }
    .validation-summary-errors {
        background: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid #f5c6cb;
    }
    .field-validation-error {
        color: #dc3545;
        font-size: 0.95rem;
        margin-top: 5px;
        display: block;
    }
    .info-text {
        color: #65676b;
        font-size: 0.95rem;
        text-align: center;
        margin-bottom: 20px;
        line-height: 1.4;
    }
</style>

<div class="fb-forgot-container">
    <div class="fb-logo"><a href="@Url.Action("Index", "Home")"><img src="~/Photos/logo.png" alt="Logo" style="width:100px;height:90px;"></a></div>
    <div class="fb-forgot-card">
        <div class="fb-forgot-title">Forgot Password</div>
        <div class="info-text">
            Enter your email address and we'll send you a link to reset your password.
        </div>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary-errors">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        
        <form asp-action="ForgotPassword" method="post">
            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
            <span asp-validation-for="Email" class="field-validation-error"></span>
            <button type="submit" class="btn btn-submit">Send Reset Link</button>
        </form>
        
        <a href="@Url.Action("Login", "Account")" class="btn-back">Back to Login</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
