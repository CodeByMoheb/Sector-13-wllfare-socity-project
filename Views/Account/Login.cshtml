@model Sector_13_Welfare_Society___Digital_Management_System.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
 <link rel="icon" type="image/x-icon" href="~/Photos/favicon.png" />

}

<style>
    body {
        background: #f0f2f5;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .fb-login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        min-height: 100vh;
        justify-content: center;
    }
    .fb-login-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 32px 28px 24px 28px;
        width: 100%;
        max-width: 380px;
        margin-bottom: 20px;
    }
    .fb-logo {
        color: #1877f2;
        font-size: 3rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 16px;
        letter-spacing: -2px;
    }
    .fb-login-title {
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 18px;
        color: #1c1e21;
    }
    .form-control {
    border-radius: 6px;
    border: 1px solid #dddfe2;
    padding: 14px 16px;
    margin-bottom: 14px;
    font-size: 1rem;
    width: 100%; /* Add this line */
}
    .btn-login {
        background: #1877f2;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 12px;
        font-weight: 600;
        width: 100%;
        font-size: 1.1rem;
        margin-bottom: 10px;
        transition: background 0.2s;
    }
    .btn-login:hover {
        background: #166fe5;
    }
    .btn-google {
        background: #fff;
        color: #444;
        border: 1px solid #dddfe2;
        border-radius: 6px;
        padding: 12px;
        width: 100%;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
        transition: background 0.2s;
    }
    .btn-google:hover {
        background: #f5f5f5;
    }
    .fb-register-link {
        display: block;
        text-align: center;
        margin-top: 18px;
        color: #1877f2;
        font-weight: 500;
        text-decoration: none;
    }
    .fb-register-link:hover {
        text-decoration: underline;
    }
    .validation-summary-errors {
        background: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid #f5c6cb;
    }
    .field-validation-error {
        color: #dc3545;
        font-size: 0.95rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="fb-login-container">
    <div class="fb-logo"><a href="@Url.Action("Index", "Home")"><img src="~/Photos/logo.png" alt="Logo" style="width:100px;height:90px;"></a></div>
    <div class="fb-login-card">
        <div class="fb-login-title">Log in to your account</div>
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary-errors">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        <form asp-action="Login" method="post">
            <input asp-for="Email" class="form-control" placeholder="Email address" />
            <span asp-validation-for="Email" class="field-validation-error"></span>
            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
            <button type="submit" class="btn btn-login">Log In</button>
        </form>
        <div style="text-align: center; margin-top: 10px;">
            <a href="@Url.Action("ForgotPassword", "Account")" style="color: #1877f2; text-decoration: none; font-size: 0.9rem;">Forgot Password?</a>
        </div>
        <form asp-controller="Account" asp-action="ExternalLogin" method="post">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="btn-google">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" style="width:22px; height:22px;">Sign in with Google
            </button>
        </form>
        <a href="@Url.Action("Register", "Account")" class="fb-register-link">Create new account</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 