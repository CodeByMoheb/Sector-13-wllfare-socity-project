@{
    ViewData["Title"] = "Member Directory";
}

<style>
    #pdf-allpages-container {
        width: 100%;
        max-width: 900px;
        margin: 20px auto 40px auto;
        padding: 0 8px;
    }
    #pdf-allpages-container canvas {
        display: block;
        width: 100% !important;
        height: auto !important;
        margin: 24px auto;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        border-radius: 6px;
    }
    .pdf-download-btn {
        display: block;
        margin: 32px auto 8px auto;
        padding: 10px 24px;
        background: #007bff;
        width: 25%;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1.1em;
        font-weight: 500;
        text-decoration: none;
        text-align: center;
        transition: background 0.2s;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    }
    .pdf-download-btn:hover {
        background: #0056b3;
        color: #fff;
        text-decoration: none;
    }
    @@media (max-width: 600px) {
        #pdf-allpages-container {
            max-width: 100vw;
            padding: 0 2vw;
        }
        #pdf-allpages-container canvas {
            border-radius: 3px;
            margin: 14px auto;
        }
        .pdf-download-btn {
            width: 95vw;
            font-size: 1em;
            padding: 10px 0;
        }
    }
</style>

<a class="pdf-download-btn" href="/memberDirectory/memberdir.pdf" download>
    Download PDF
</a>
<div id="pdf-allpages-container"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
<script>
    const url = '/memberDirectory/memberdir.pdf';
    const container = document.getElementById('pdf-allpages-container');
    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    pdfjsLib.getDocument(url).promise.then(function(pdf) {
        for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
            pdf.getPage(pageNum).then(function(page) {
                const viewport = page.getViewport({ scale: 1.2 });
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.height = viewport.height;
                canvas.width = viewport.width;
                container.appendChild(canvas);
                page.render({ canvasContext: context, viewport: viewport });
            });
        }
    }).catch(function(error) {
        container.innerHTML = '<div style="color:red;text-align:center;margin:40px;">Failed to load PDF.</div>';
    });
</script> 