    .recognition-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .recognition-text {
        font-size: 1.2rem;
        opacity: 0.95;
        max-width: 900px;
        margin: 0 auto;
        line-height: 1.8;
        position: relative;
        z-index: 2;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.8rem;
        }
        
        .contributors-grid {
            grid-template-columns: 1fr;
            padding: 0 15px;
            gap: 30px;
        }
        
        .contribution-stats {
            grid-template-columns: 1fr;
        }

        .photo-container {
            width: 150px;
            height: 150px;
        }

        .contributor-header {
            padding: 30px 20px;
        }

        .contributor-body {
            padding: 30px 20px;
        }
    }

    /* Staggered animations */
    .contributor-card:nth-child(1) { animation-delay: 0.1s; }
    .contributor-card:nth-child(2) { animation-delay: 0.2s; }
    .contributor-card:nth-child(3) { animation-delay: 0.3s; }
    .contributor-card:nth-child(4) { animation-delay: 0.4s; }
    .contributor-card:nth-child(5) { animation-delay: 0.5s; }
    .contributor-card:nth-child(6) { animation-delay: 0.6s; }
    .contributor-card:nth-child(7) { animation-delay: 0.7s; }
    .contributor-card:nth-child(8) { animation-delay: 0.8s; }
    .contributor-card:nth-child(9) { animation-delay: 0.9s; }
    .contributor-card:nth-child(10) { animation-delay: 1s; }

    /* Scroll reveal animation */
    .scroll-reveal {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .scroll-reveal.revealed {
        opacity: 1;
        transform: translateY(0);
    }
</style>

