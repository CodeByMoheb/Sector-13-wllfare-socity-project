        // Number Counter Animation
        class NumberCounter {
            constructor() {
                this.counters = document.querySelectorAll('.stat-card h3');
                this.animated = new Set();
                this.init();
            }

            init() {
                this.bindEvents();
                this.checkCounters();
            }

            bindEvents() {
                window.addEventListener('scroll', () => this.checkCounters());
                window.addEventListener('resize', () => this.checkCounters());
            }

            checkCounters() {
                this.counters.forEach(counter => {
                    if (this.animated.has(counter)) return; // Don't re-animate

                    const rect = counter.getBoundingClientRect();
                    // Animate when counter is fully visible or just entered view
                    const isVisible = (rect.top >= 0 && rect.bottom <= window.innerHeight) ||
                                      (rect.top < window.innerHeight && rect.bottom >= 0);

                    if (isVisible) {
                        this.animateCounter(counter);
                        this.animated.add(counter);
                    }
                });
            }

            animateCounter(counter) {
                const targetText = counter.textContent;
                const targetNumber = parseInt(targetText.replace(/\D/g, ''));
                const suffix = targetText.replace(/\d/g, '');

                let currentNumber = 0;
                const duration = 3000;
                const startTimestamp = performance.now();

                const animate = (currentTime) => {
                    const elapsed = currentTime - startTimestamp;
                    const progress = Math.min(elapsed / duration, 1); // Clamp between 0 and 1
                    currentNumber = progress * targetNumber;

                    counter.textContent = Math.floor(currentNumber) + suffix;

                    if (progress < 1) {
                        requestAnimationFrame(animate);
                    }
                };
                requestAnimationFrame(animate);
            }
        }

        // Partnerships slider scroll logic
        class PartnershipsSlider {
            constructor() {
                this.carousel = document.querySelector('.partnerships-slider');
                this.leftArrow = document.querySelector('.partnerships-arrow.left-arrow');
                this.rightArrow = document.querySelector('.partnerships-arrow.right-arrow');
                this.scrollAmount = 250; // How much to scroll per step
                this.autoScrollInterval = null;
                this.isHovered = false;

                this.init();
            }

            init() {
                this.bindEvents();
                this.startAutoScroll();
            }

            bindEvents() {
                if (this.leftArrow) {
                    this.leftArrow.addEventListener('click', () => {
                        this.stopAutoScroll();
                        this.carousel.scrollBy({ left: -this.scrollAmount, behavior: 'smooth' });
                        this.startAutoScroll();
                    });
                    this.leftArrow.addEventListener('mouseenter', () => { this.isHovered = true; });
                    this.leftArrow.addEventListener('mouseleave', () => { this.isHovered = false; });
                }

                if (this.rightArrow) {
                    this.rightArrow.addEventListener('click', () => {
                        this.stopAutoScroll();
                        this.carousel.scrollBy({ left: this.scrollAmount, behavior: 'smooth' });
                        this.startAutoScroll();
                    });
                    this.rightArrow.addEventListener('mouseenter', () => { this.isHovered = true; });
                    this.rightArrow.addEventListener('mouseleave', () => { this.isHovered = false; });
                }

                if (this.carousel) {
                    this.carousel.addEventListener('mouseenter', () => { this.isHovered = true; });
                    this.carousel.addEventListener('mouseleave', () => { this.isHovered = false; });
                    // Optional: Reset scroll position if all items are visible and user scrolls manually
                    this.carousel.addEventListener('scroll', () => {
                        if (this.carousel.scrollLeft === 0 && this.carousel.scrollWidth > this.carousel.clientWidth) {
                            // If scrolled to start and there's more content, prevent immediate auto-scroll reset
                        } else if (this.carousel.scrollLeft + this.carousel.clientWidth >= this.carousel.scrollWidth - 1) {
                            // If scrolled to end, reset to start after a delay or next auto-scroll
                        }
                    });
                }
            }

            autoScroll() {
                if (!this.carousel) return;

                // If at the end, scroll back to start
                if (this.carousel.scrollLeft + this.carousel.clientWidth >= this.carousel.scrollWidth - 1) {
                    this.carousel.scrollTo({ left: 0, behavior: 'smooth' });
                } else {
                    this.carousel.scrollBy({ left: this.scrollAmount, behavior: 'smooth' });
                }
            }

            startAutoScroll() {
                if (this.autoScrollInterval) clearInterval(this.autoScrollInterval); // Clear existing
                this.autoScrollInterval = setInterval(() => {
                    if (!this.isHovered) this.autoScroll();
                }, 2000); // Auto-scroll every 3 seconds
            }

            stopAutoScroll() {
                if (this.autoScrollInterval) {
                    clearInterval(this.autoScrollInterval);
                    this.autoScrollInterval = null;
                }
            }
        }


