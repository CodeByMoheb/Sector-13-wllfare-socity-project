}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    display: flex;
    flex-wrap: wrap; /* Allows columns to wrap on smaller screens */
    justify-content: space-between; /* Distributes space between columns */
    align-items: flex-start; /* Aligns items to the top of the container */
}

/* Main Footer Section - Updated */
.main-footer {
    background-color: #2c2c2c !important;
    padding: 40px 0 0 !important;
    margin-top: auto !important;
    width: 100% !important;
    flex-shrink: 0 !important;
}

.footer-column {
    flex: 1; /* Allows columns to grow and shrink */
    min-width: 250px; /* Minimum width before wrapping */
    padding: 0 15px; /* Padding for spacing between columns */
    margin-bottom: 30px; /* Space below columns before wrap */
}

.footer-column h3 {
    color: #fff; /* White heading color */
    font-size: 1.3em;
    margin-bottom: 20px;
    position: relative;
    padding-bottom: 10px; /* Space for the underline effect */
}

/* Underline effect for headings (optional, but looks good) */
.footer-column h3::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50px; /* Length of the underline */
    height: 2px;
    background-color: #007bff; /* A blue color for the underline */
}

.footer-column p,
.footer-column ul {
    font-size: 0.95em;
    color: #ccc; /* Lighter text color */
}

/* Quick Links Specific Styling */
.quick-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.quick-links ul li {
    margin-bottom: 10px;
}

.quick-links ul li a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s ease;
}

.quick-links ul li a:hover {
    color: #fff; /* White on hover */
}

/* Contact Us Specific Styling */
.contact-us p strong {
    color: #fff; /* White for strong text like "Head Office" */
}

.contact-us a {
    color: #007bff; /* Blue for email links */
    text-decoration: none;
    transition: color 0.3s ease;
}

.contact-us a:hover {
    color: #fff;
}

/* Brand Logo and Social Icons */
.brand-social {
    text-align: right; /* Align logo and icons to the right */
    min-width: 200px; /* Ensure space for logo */
    flex-grow: 0; /* Don't let it grow too much */
}

.footer-logo img {
    max-width: 150px; /* Adjust logo size as needed */
    height: auto;
    margin-bottom: 20px;
    filter: brightness(0) invert(1); /* Makes a colored logo white for dark background */
}

.social-icons a {
    color: #fff; /* White icons */
    font-size: 1.5em;
    margin-left: 15px; /* Space between icons */
    transition: color 0.3s ease;
}

.social-icons a:hover {
    color: #007bff; /* Blue on hover */
}

/* Footer Bottom Section (Copyright) */
.footer-bottom {
    background-color: #212121; /* Slightly darker bottom bar */
    padding: 15px 0;
    text-align: left; /* Aligns text to the left as in image */
    border-top: 1px solid #3a3a3a; /* Subtle separator line */
}

.footer-bottom p {
    margin: 0;
    font-size: 0.85em;
    color: #aaa; /* Lighter text for copyright */
}

/* Responsive adjustments */
@@media (max-width: 992px) {
    .footer-column {
        min-width: 200px; /* Slightly smaller min-width for tablets */
    }
}

@@media (max-width: 768px) {
    .footer-container {
        flex-direction: column; /* Stack columns vertically on smaller screens */
        align-items: center; /* Center items when stacked */
        text-align: center; /* Center text within columns */
    }

    .footer-column {
        width: 100%; /* Take full width when stacked */
        max-width: 400px; /* Limit width for readability */
        padding: 0 10px;
    }

    .footer-column h3 {
        text-align: center;
    }

    .footer-column h3::after {
        left: 50%; /* Center the underline */
        transform: translateX(-50%);
    }

    .brand-social {
        text-align: center; /* Center the logo and social icons */
        order: -1; /* Move brand/social to top on mobile if desired, or remove for last */
    }

    .footer-logo img {
        margin-bottom: 10px;
    }

    .social-icons a {
        margin: 0 10px; /* Adjust spacing for centered icons */
    }

    .footer-bottom {
        text-align: center; /* Center copyright on mobile */
    }
}

@@media (max-width: 480px) {
    .footer-column {
        margin-bottom: 20px;
    }

