@{
    ViewData["Title"] = "উত্তরা সেক্টর ১৩ ওয়েলফেয়ার  সোসাইটি";
}

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
            overflow-x: hidden; /* Prevent horizontal scrollbar on HTML */
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            overflow-x: hidden; /* Prevent horizontal scrollbar on Body */
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px; /* Adjusted for better spacing */
        }

        /* Navigation */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            z-index: 1000;
            padding: 0.8rem 0;
            transition: all 0.3s ease;
            border-bottom: 1.5px solid #e5e5e5; /* From uws-navbar */
            box-shadow: 0 2px 8px rgba(0,0,0,0.03); /* From uws-navbar */
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0px 10px;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .nav-logo {
            display: flex;
            align-items: center;
            gap: 15px;
            text-decoration: none;
        }

        .nav-logo img {
            height: 70px;
            width: 78px;
        }
        @@font-face {
            font-family: 'Li Shadhinata';
            src: url('/fonts/Li Shadhinata 2.0 Unicode.ttf') format('truetype');
            font-weight: normal;
        }
        .nav-logo span {
            color: #2c3e50;
            font-weight: 500;
            font-size: 1.2rem;
            white-space: nowrap; 
          font-family: 'Li Shadhinata';
        }

        .nav-menu {
            display: flex;
            justify-content:center;
            list-style: none;
            gap: 0.8rem;
            margin-left: 3rem;
            flex: 1; /* Allow menu to take available space */
        }

        .nav-link,
        .uws-link {
            text-decoration: none;
            color: #2c3e50;
            font-weight: 500;
            transition: color 0.3s ease;
            position: relative;
            font-size: 13px !important;
            color: #23272b; /* From uws-menu .uws-link */
            font-weight: 600; /* From uws-menu .uws-link */
            font-size: 1.08rem; /* From uws-menu .uws-link */
            letter-spacing: 1px; /* From uws-menu .uws-link */
            padding: 10px 18px; /* From uws-menu .uws-link */
            border-radius: 7px; /* From uws-menu .uws-link */
        }

        .nav-link:hover,
        .uws-link:hover {
            color: #3498db;
            background: #f2f2f2; /* From uws-menu .uws-link:hover */
            color: #5b3fa2; /* From uws-menu .uws-link:hover */
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background-color: #3498db;
            transition: width 0.3s ease;
            font-size: 10px;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .nav-link.active {
            background: #5b3fa2; /* From uws-menu .uws-link.active */
            color: #fff; /* From uws-menu .uws-link.active */
        }


        .hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }

        .bar {
            width: 25px;
            height: 3px;
            background-color: #2c3e50;
            margin: 3px 0;
            transition: 0.3s;
        }

        /* Dropdown styles */
        .nav-item.dropdown {
            position: relative;
        }
        .dropdown-toggle::after {
            content: none !important;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            left: 0;
            top: 100%;
            min-width: 180px;
            background: #fff;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
            border-radius: 6px;
            padding: 0.5rem 0;
            z-index: 1001;
        }
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown-item {
            display: block;
            padding: 10px 22px;
            color: #23272b;
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: background 0.2s, color 0.2s;
            border-radius: 4px;
        }
        .dropdown-item:hover {
            background: #f2f2f2;
            color: #5b3fa2;
        }

        /* Auth Buttons */
        .uws-donate-btn {
            background: #e50914;
            color: #fff;
            font-weight: 500;
            border-radius: 6px;
            padding: 10px 25px;
            text-decoration: none;
            font-size: 0.8rem;
            letter-spacing: 1px;
            margin-left: 10px;
            transition: background 0.2s;
            display: inline-block;
        }
        .uws-donate-btn:hover {
            background: #b0060f;
            color: #fff;
        }
        .uws-auth-btn {
            background: #fff;
            color: #5b3fa2;
            border: 1.5px solid #5b3fa2;
            border-radius: 6px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 0.8rem;
            text-decoration: none;
            margin-left: 5px;
            transition: background 0.2s, color 0.2s;
            display: inline-block;
        }
        .uws-auth-btn:hover {
            background: #5b3fa2;
            color: #fff;
        }
        .uws-auth-btn.uws-register {
            border: 1.5px solid #3498db;
            color: #3498db;
        }
        .uws-auth-btn.uws-register:hover {
            background: #3498db;
            color: #fff;
        }

        /* Hero Section with Slider */
        .hero {
            width: 100%;
            height: 100vh; /* Main height for the hero section */
            position: relative;
            overflow: hidden;
        }

        .slider {
            width: 100%;
            height: 100vh; /* Fill the hero container */
            position: relative;
        }

        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh; /* Fill the slider container */
            opacity: 0;
            transition: opacity 1s ease-in-out;
            display: flex;
            align-items: center;
            justify-content: center;
            transform: scale(0.95);
            transition: all 1.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .slide.active {
            opacity: 1;
            transform: scale(1);
        }

        .slide.active {
            opacity: 1;
        }

        .slide-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh; /* Fill the slide container */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(0.9); /* Slightly darker for better text contrast */
            transition: all 1.5s ease-in-out;
            transform: scale(1); /* Start slightly zoomed in */
        }

        .slide.active .slide-bg {
            transform: scale(1); /* Normal scale when active */
        }

        /* Parallax effect for slider backgrounds */
        .slide-bg {
            will-change: transform;
        }

        /* Add a subtle rotation effect on hover */
        .slide:hover .slide-bg {
            transform: scale(1) rotate(1deg);
        }

        /* Add a subtle overlay animation */
        .slide-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1));
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .slide.active .slide-bg::before {
            opacity: 1;
        }

        /* Animation classes for slider backgrounds */
        .slide-bg.animate-from-right {
            animation: slideInFromRight 1.5s ease-out;
        }

        .slide-bg.animate-from-left {
            animation: slideInFromLeft 1.5s ease-out;
        }

        .slide-bg.animate-fade-zoom {
            animation: fadeInZoom 1.5s ease-out;
        }

        .slide-bg.animate-from-bottom {
            animation: slideInFromBottom 1.5s ease-out;
        }

        /* Add a subtle floating animation for active slides */
        .slide.active .slide-bg {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) scale(1);
            }
            50% {
                transform: translateY(-10px) scale(1.02);
            }
        }

        @@keyframes pulse {
            0% { transform: scale(1.1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1.1); }
        }

        .slide-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
            max-width: 800px;
            padding: 0 20px;
        }

        .slide-content h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            animation: slideInUp 1s ease-out;
        }

        .slide-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            animation: slideInUp 1s ease-out 0.2s both;
        }

        .cta-button {
            display: inline-block;
            padding: 15px 30px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            animation: slideInUp 1s ease-out 0.4s both;
        }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(52, 152, 219, 0.3);
        }

        /* Slider Controls */
        .slider-controls {
            position: absolute;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            gap: 2rem;
            z-index: 3;
        }

        .prev-btn, .next-btn {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            padding: 10px 15px;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .prev-btn:hover, .next-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
            animation: pulse 0.6s ease-in-out;
        }

        @@keyframes pulse {
            0% { transform: scale(1.1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1.1); }
        }

        .slider-dots {
            display: flex;
            gap: 10px;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
        }

        .dot.active {
            background: white;
            transform: scale(1.2);
        }

        /* Keyframe Animations */
        @@keyframes progress {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            100% {
                transform: scale(2);
                opacity: 0;
            }
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Slider image animations */
        @@keyframes slideInFromRight {
            from {
                opacity: 0;
                transform: translateX(100px) scale(1.1);
            }
            to {
                opacity: 1;
                transform: translateX(0) scale(1);
            }
        }

        @@keyframes slideInFromLeft {
            from {
                opacity: 0;
                transform: translateX(-100px) scale(1.1);
            }
            to {
                opacity: 1;
                transform: translateX(0) scale(1);
            }
        }

        @@keyframes fadeInZoom {
            from {
                opacity: 0;
                transform: scale(1.2);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @@keyframes slideInFromBottom {
            from {
                opacity: 0;
                transform: translateY(100px) scale(1.1);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Section Styles */
        section {
            padding: 80px 0;
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .section-header p {
            font-size: 1.1rem;
            color: #7f8c8d;
            max-width: 600px;
            margin: 0 auto;
        }

        .feature-card {
            transition: transform 0.3s ease;
            border: none;
            border-radius: 15px;
            background:rgba(254, 255, 255, 0.45);
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .stats-section {
            background: #f8f9fa;
            padding: 80px 0;
        }

        .stat-card {
            text-align: center;
            padding: 30px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .about-section {
            padding: 60px 0;
            background: white;
        }

        .mission-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0;
            margin-bottom: 0; /* Ensures no extra space before footer */
        }

        /* Footer */
        .main-footer {
            background-color: #2c2c2c !important;
            padding: 40px 0 0 !important;
            margin-top: auto !important; /* Pushes footer to bottom */
            width: 100% !important;
            flex-shrink: 0 !important; /* Prevents shrinking in flex container */
            position: relative; /* Ensure it stays in flow */
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: flex-start;
        }

        .footer-column {
            flex: 1;
            min-width: 250px;
            padding: 0 15px;
            margin-bottom: 30px;
        }

        .footer-column h3 {
            color: #fff;
            font-size: 1.3em;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }

        .footer-column h3::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 50px;
            height: 2px;
            background-color: #007bff;
        }

        .footer-column p,
        .footer-column ul {
            font-size: 0.95em;
            color: #ccc;
        }

        .quick-links ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .quick-links ul li {
            margin-bottom: 10px;
        }

        .quick-links ul li a {
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .quick-links ul li a:hover {
            color: #fff;
        }

        .contact-us p strong {
            color: #fff;
        }

        .contact-us a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .contact-us a:hover {
            color: #fff;
        }

        .brand-social {
            text-align: right;
            min-width: 200px;
            flex-grow: 0;
        }

        .footer-logo img {
            max-width: 150px;
            height: auto;
            margin-bottom: 20px;
            filter: brightness(0) invert(1);
        }

        .social-icons a {
            color: #fff;
            font-size: 1.5em;
            margin-left: 15px;
            transition: color 0.3s ease;
        }

        .social-icons a:hover {
            color: #007bff;
        }

        .footer-bottom {
            background-color: #212121;
            padding: 15px 0;
            text-align: left;
            border-top: 1px solid #3a3a3a;
        }

        .footer-bottom p {
            margin: 0;
            font-size: 0.85em;
            color: #aaa;
        }

        /* Programs Section */
        .programs-section {
            background: #f8f9fa;
            padding: 50px 0;
        }
        .program-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(44, 62, 80, 0.06);
            border-left: 4px solid #2A7B9B;
            display: flex;
            flex-direction: column;
            height: 100%;
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .program-card:hover {
            box-shadow: 0 8px 32px rgba(44, 62, 80, 0.12);
            transform: translateY(-6px) scale(1.03);
        }
        .program-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }
        .program-card-body {
            padding: 1.5rem 1.2rem 1.2rem 1.2rem;
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .program-card-body h4 {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
        }
        .program-card-body p {
            color: #444;
            font-size: 1rem;
            margin-bottom: 1rem;
        }
        .program-card-body .btn {
            background: #2A7B9B;
            border: none;
            font-weight: 500;
            border-radius: 6px;
            padding: 8px 24px;
            color: #fff; /* Ensure button text is white */
            text-decoration: none; /* Remove underline from button links */
        }
        .program-card-body .btn:hover {
            background: #195a6e;
        }

        /* Partnerships Section */
        .partnerships-section {
            background: #4472b2;
            padding: 60px 0;
            text-align: center;
        }
        .section-title {
            font-size: 2.5em;
            margin-bottom: 10px;
            color: #fff;
        }
        .underline {
            width: 80px;
            height: 3px;
            background-color: #fff;
            margin: 0 auto 30px;
        }
        .section-description {
            font-size: 1.1em;
            max-width: 700px;
            margin: 0 auto 40px;
            line-height: 1.5;
            color: #e0e0e0;
        }
        .partnerships-slider-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 18px;
            margin-top: 30px;
        }
        .partnerships-slider {
            display: flex;
            gap: 32px;
            overflow-x: auto;
            scroll-behavior: smooth;
            padding: 10px 0;
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none;  /* IE and Edge */
        }
        .partnerships-slider::-webkit-scrollbar {
            display: none; /* Chrome/Safari */
        }
        .partner-logo {
            flex-shrink: 0; /* Prevent logos from shrinking */
            background: rgba(254, 255, 255, 0.76);
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(44,62,80,0.08);
            padding: 18px 28px;
            min-width: 240px;
            min-height: 120px;
            display: flex;
            flex-direction: column; /* Stack image and text */
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: box-shadow 0.2s, transform 0.2s;
            color: #333; /* Text color inside logo box */
        }
        .partner-logo:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(44,62,80,0.15);
        }
        .partner-logo img {
            max-width: 180px;
            max-height: 70px;
            object-fit: contain;
            margin-bottom: 10px; /* Space between logo and text */
        }
        .partnerships-arrow {
            background: #fff;
            color: #4472b2;
            border: none;
            border-radius: 50%;
            width: 38px;
            height: 38px;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(44,62,80,0.10);
            transition: background 0.2s, color 0.2s, transform 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .partnerships-arrow:hover {
            background: #e6e6e6;
            color: #2A7B9B;
            transform: scale(1.1);
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .nav-menu {
                gap: 1rem !important;
            }
            .nav-container {
                flex-direction: column;
                align-items: flex-start;
            }
            .nav-logo {
                width: 100%;
                justify-content: space-between;
                padding-right: 15px; /* Adjust if needed */
            }
            .nav-menu {
                margin-left: 0; /* Reset margin for mobile menu */
                width: 100%; /* Full width for stacked menu */
                justify-content: flex-start;
            }
            .uws-auth-btn {
                margin-left: 0; /* Adjust for better alignment */
                margin-top: 10px; /* Space between buttons */
            }
            .nav-container > div:last-child { /* Targets auth buttons div */
                width: 100%;
                justify-content: center;
                display: flex;
                margin-left: 0;
                padding-bottom: 10px;
            }
            .footer-column {
                min-width: 200px;
            }
            .program-img { height: 180px; }
            .partner-logo { min-width: 180px; padding: 12px 10px; }
            .partnerships-slider { gap: 18px; }
        }

        @@media (max-width: 768px) {
            .hamburger {
                display: flex;
            }
            .nav-menu {
                position: fixed;
                left: -100%;
                top: 70px; /* Below navbar */
                flex-direction: column;
                background-color: white;
                width: 100%;
                text-align: center;
                transition: 0.3s;
                box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
                padding: 2rem 0;
                gap: 0.6rem;
                height: calc(100vh - 70px); /* Adjust height to fill remaining viewport */
                overflow-y: auto; /* Enable scrolling if menu content is long */
            }
            .nav-menu.active {
                left: 0;
            }
            .nav-item {
                margin: 0.5rem 0;
            }
            .nav-link {
                padding: 1rem 2rem;
                display: block;
            }
            .slide-content h1 {
                font-size: 2.5rem;
            }
            .slide-content p {
                font-size: 1rem;
            }
            .about-content,
            .contact-content {
                grid-template-columns: 1fr;
                gap: 40px;
            }
            .stats {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            .programs-section { padding: 30px 0; }
            .program-img { height: 120px; }
            .program-card { margin-bottom: 24px; }

            .footer-container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }
            .footer-column {
                width: 100%;
                max-width: 400px;
                padding: 0 10px;
            }
            .footer-column h3 {
                text-align: center;
            }
            .footer-column h3::after {
                left: 50%;
                transform: translateX(-50%);
            }
            .brand-social {
                text-align: center;
                order: -1;
