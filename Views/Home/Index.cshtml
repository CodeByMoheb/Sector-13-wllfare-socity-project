    <script>
        // Slider functionality
        class Slider {
            constructor() {
                this.slides = document.querySelectorAll('.slide');
                this.dots = document.querySelectorAll('.dot');
                this.prevBtn = document.querySelector('.prev-btn');
                this.nextBtn = document.querySelector('.next-btn');
                this.currentSlide = 0;
                this.slideInterval = null;

                this.init();
            }

            init() {
                this.bindEvents();
                this.updateSlider();
                this.startAutoSlide(); // Start auto-slide immediately
            }

            bindEvents() {
                this.prevBtn.addEventListener('click', () => {
                    this.stopAutoSlide();
                    this.prevSlide();
                    this.startAutoSlide(); // Restart after manual interaction
                });
                this.nextBtn.addEventListener('click', () => {
                    this.stopAutoSlide();
                    this.nextSlide();
                    this.startAutoSlide(); // Restart after manual interaction
                });

                this.dots.forEach((dot, index) => {
                    dot.addEventListener('click', () => {
                        this.stopAutoSlide();
                        this.goToSlide(index);
                        this.startAutoSlide(); // Restart after manual interaction
                    });
                });

                const slider = document.querySelector('.slider');
                if (slider) {
                    slider.addEventListener('mouseenter', () => {
                        this.stopAutoSlide();
                    });
                    slider.addEventListener('mouseleave', () => {
                        this.startAutoSlide();
                    });
                }
            }

            updateSlider() {
                this.slides.forEach(slide => slide.classList.remove('active'));
                this.dots.forEach(dot => dot.classList.remove('active'));

                const activeSlide = this.slides[this.currentSlide];
                activeSlide.classList.add('active');
                this.dots[this.currentSlide].classList.add('active');

                // Apply different animations based on slide index
                const slideBg = activeSlide.querySelector('.slide-bg');
                if (slideBg) {
                    // Remove any existing animation classes
                    slideBg.classList.remove('animate-from-right', 'animate-from-left', 'animate-fade-zoom', 'animate-from-bottom');
                    
                    // Add animation class based on slide index
                    const animations = ['animate-fade-zoom', 'animate-from-right', 'animate-from-left', 'animate-from-bottom'];
                    const animationClass = animations[this.currentSlide % animations.length];
                    slideBg.classList.add(animationClass);
                }
            }

            nextSlide() {
                this.currentSlide = (this.currentSlide + 1) % this.slides.length;
                this.updateSlider();
            }

            prevSlide() {
                this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
                this.updateSlider();
            }

            goToSlide(index) {
                this.currentSlide = index;
                this.updateSlider();
            }

            startAutoSlide() {
                this.stopAutoSlide(); // Clear any existing interval first
                this.slideInterval = setInterval(() => {
                    this.nextSlide();
                }, 3000);
            }

            stopAutoSlide() {
                if (this.slideInterval) {
                    clearInterval(this.slideInterval);
                    this.slideInterval = null;
                }
            }
        }

        // Navigation functionality
        class Navigation {
            constructor() {
                this.hamburger = document.querySelector('.hamburger');
                this.navMenu = document.querySelector('.nav-menu');
                this.navLinks = document.querySelectorAll('.nav-link, .dropdown-item'); // Include dropdown items

                this.init();
            }

            init() {
                this.bindEvents();
                this.handleScroll();
            }

            bindEvents() {
                this.hamburger.addEventListener('click', () => this.toggleMenu());

                this.navLinks.forEach(link => {
                    link.addEventListener('click', (e) => {
                        const targetId = link.getAttribute('href');
                        if (targetId && targetId.startsWith('#')) {
                            e.preventDefault(); // Only prevent default for hash links
                            this.smoothScroll(targetId);
                            if (window.innerWidth <= 768) { // Close menu only on smaller screens
                                this.closeMenu();
                            }
                        }
                        // For non-hash links (like login/register), allow default behavior
                    });
                });

                // Close menu when clicking outside (on mobile)
                document.addEventListener('click', (e) => {
                    if (window.innerWidth <= 768 && !this.hamburger.contains(e.target) && !this.navMenu.contains(e.target)) {
                        this.closeMenu();
                    }
                });
            }

            toggleMenu() {
                this.hamburger.classList.toggle('active');
                this.navMenu.classList.toggle('active');

                const bars = this.hamburger.querySelectorAll('.bar');
