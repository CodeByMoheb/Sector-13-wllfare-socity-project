    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="section-title mb-4 mb-md-5">Your Impact</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 mb-4">
                <div class="impact-card">
                    <div class="impact-icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <h4>Healthcare</h4>
                    <p>Free medical camps and healthcare support for the community</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 mb-4">
                <div class="impact-card">
                    <div class="impact-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h4>Education</h4>
                    <p>Scholarships and educational support for underprivileged students</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 mb-4">
                <div class="impact-card">
                    <div class="impact-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h4>Housing</h4>
                    <p>Housing assistance and shelter support for needy families</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 mb-4">
                <div class="impact-card">
                    <div class="impact-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h4>Emergency</h4>
                    <p>Emergency relief and disaster response support</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Donations -->
<section class="recent-donations py-4 py-md-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="section-title mb-4 mb-md-5">Recent Donations</h2>
