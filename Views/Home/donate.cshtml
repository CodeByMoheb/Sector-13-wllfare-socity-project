<script>
// Load recent donations into table and mobile cards
async function loadRecentDonations() {
    try {
        const response = await fetch('/Donation/DonationHistory');
        const donors = await response.json();
        
        const tableBody = document.getElementById('recentDonationsTable');
        const cardsContainer = document.getElementById('recentDonationsCards');
        
        if (donors.length === 0) {
            // Update table view
            tableBody.innerHTML = `
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        <i class="fas fa-inbox me-2"></i>
                        No donations yet. Be the first to make a difference!
                    </td>
                </tr>
            `;
            
            // Update mobile cards view
            cardsContainer.innerHTML = `
                <div class="text-center text-muted">
                    <i class="fas fa-inbox me-2"></i>
                    No donations yet. Be the first to make a difference!
                </div>
            `;
            return;
        }
        
        // Clear existing content
        tableBody.innerHTML = '';
        cardsContainer.innerHTML = '';
        
        donors.slice(0, 10).forEach(donor => {
            // Create table row for desktop/tablet
            const row = document.createElement('tr');
            row.className = 'animate-fade-in';
            row.innerHTML = `
                <td>
                    <div class="d-flex align-items-center">
                        <div class="donor-avatar me-2">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div>
                            <strong>${donor.isAnonymous ? 'Anonymous Donor' : donor.name}</strong>
                            <span class="badge bg-success fs-6">৳${parseFloat(donor.amount).toLocaleString()}</span>
                            ${donor.message ? `<br><small class="text-muted">"${donor.message}"</small>` : ''}
                        </div>
                    </div>
                </td>
                <td>
                    @* <span class="badge bg-success fs-6">৳${parseFloat(donor.amount).toLocaleString()}</span> *@
                </td>
                <td>
                    <span class="badge bg-primary">${donor.donationType || 'General'}</span>
                </td>
                <td>
                    <small class="text-light">
                        ${new Date(donor.donationDate).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                        })}
                    </small>
                </td>
            `;
            tableBody.appendChild(row);
            
            // Create mobile card
            const card = document.createElement('div');
            card.className = 'donation-card-mobile animate-fade-in';
            card.innerHTML = `
                <div class="donor-info">
                    <div class="donor-avatar-mobile">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="donor-details">
                        <div class="donor-name">${donor.isAnonymous ? 'Anonymous Donor' : donor.name}</div>
                        ${donor.message ? `<div class="donor-message">"${donor.message}"</div>` : ''}
                    </div>
                </div>
                <div class="donation-details">
                    <span class="amount-badge bg-success">৳${parseFloat(donor.amount).toLocaleString()}</span>
                    <span class="type-badge bg-primary">${donor.donationType || 'General'}</span>
                    <div class="date-text">
                        ${new Date(donor.donationDate).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                        })}
                    </div>
                </div>
            `;
            cardsContainer.appendChild(card);
        });
    } catch (error) {
        console.error('Error loading recent donations:', error);
        
        // Update table view
        const tableBody = document.getElementById('recentDonationsTable');
        tableBody.innerHTML = `
            <tr>
                <td colspan="4" class="text-center text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Unable to load recent donations. Please try again later.
                </td>
            </tr>
        `;
        
        // Update mobile cards view
        const cardsContainer = document.getElementById('recentDonationsCards');
        cardsContainer.innerHTML = `
            <div class="text-center text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Unable to load recent donations. Please try again later.
            </div>
        `;
    }
}

// Form validation and submission
document.getElementById('donationForm').addEventListener('submit', function(e) {
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    submitBtn.innerHTML = '<span class="loading"></span> Processing...';
    submitBtn.disabled = true;
    
    // Re-enable after 3 seconds if no response
    setTimeout(() => {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }, 3000);
});

// Initialize when page loads
document.addEventListener('DOMContentLoaded', function() {
    // Load recent donations
    loadRecentDonations();
});

// Add floating animation to impact cards
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.impact-card');
    const impactSection = document.querySelector('.impact-section');
    
    // Add animate class to impact section to make it visible
    if (impactSection) {
        impactSection.classList.add('animate');
    }
    
    cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.classList.add('animate-fade-in');
    });
});

// Initialize when page loads
document.addEventListener('DOMContentLoaded', function() {
    // Load recent donations
    loadRecentDonations();
    
    // Add event listener for download history button
    const downloadHistoryBtn = document.getElementById('downloadHistoryBtn');
    if (downloadHistoryBtn) {
        downloadHistoryBtn.addEventListener('click', downloadDonationHistory);
    }
});

// Download donation history as PDF
async function downloadDonationHistory() {
    try {
        const downloadBtn = document.getElementById('downloadHistoryBtn');
        const originalText = downloadBtn.innerHTML;
        
        // Show loading state
        downloadBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i><span class="d-none d-md-inline">Generating...</span>';
        downloadBtn.disabled = true;
        
        // Make request to download donation history
        const response = await fetch('/Donation/ExportDonationHistory');
        
        if (response.ok) {
            // Get the blob from response
            const blob = await response.blob();
            
            // Create download link
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `DonationHistory_${new Date().toISOString().slice(0, 10)}.pdf`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            
            // Show success message
            showSuccessMessage('Donation history downloaded successfully!');
        } else {
            throw new Error('Failed to download donation history');
        }
        
        // Reset button state
        downloadBtn.innerHTML = originalText;
        downloadBtn.disabled = false;
        
    } catch (error) {
        console.error('Error downloading donation history:', error);
        
        // Reset button state
        const downloadBtn = document.getElementById('downloadHistoryBtn');
        downloadBtn.innerHTML = '<i class="fas fa-file-pdf me-1"></i><span class="d-none d-md-inline">Export History</span>';
        downloadBtn.disabled = false;
        
        // Show error message
        showErrorMessage('Failed to download donation history. Please try again.');
    }
}
</script>

