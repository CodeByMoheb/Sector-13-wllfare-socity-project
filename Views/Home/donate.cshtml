@model Sector_13_Welfare_Society___Digital_Management_System.Models.Donor
@{
    ViewData["Title"] = "Donate - Sector 13 Welfare Society";
    Layout = "_Layout";
}

<!-- Hero Section with Animation -->
<div class="hero-section">
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <div class="hero-text animate-fade-in">
                        <h3 class="display-4 fw-bold text-white mb-2">
                            <span class="text-gradient">Make a Difference</span><br>
                            Today
                        </h3>
                        <div class="recent-donations-section">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-white mb-0">
                                    <i class="fas fa-heart me-2"></i>
                                    Recent Donations
                                </h4>
                                <button class="btn btn-outline-light btn-sm" id="downloadHistoryBtn" title="Download Complete Donation History">
                                    <i class="fas fa-file-pdf me-1"></i>
                                    <span class="d-none d-md-inline">Export History</span>
                                </button>
                            </div>
                            <div class="recent-donations-container">
                                <!-- Desktop/Tablet View -->
                                <div class="recent-donations-table d-none d-md-block">
                                    <div class="table-responsive">
                                        <table class="table table-dark table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Donor</th>
                                                    <th>Amount</th>
                                                    <th>Type</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody id="recentDonationsTable">
                                                <tr>
                                                    <td colspan="4" class="text-center">
                                                        <div class="spinner-border spinner-border-sm text-light" role="status">
                                                            <span class="visually-hidden">Loading...</span>
                                                        </div>
                                                        Loading recent donations...
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                
                                <!-- Mobile View -->
                                <div class="recent-donations-cards d-md-none" id="recentDonationsCards">
                                    <div class="text-center">
                                        <div class="spinner-border spinner-border-sm text-light" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <div class="text-white mt-2">Loading recent donations...</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="donation-card animate-slide-up">
                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-gradient text-white text-center py-3">
                                <h4 class="mb-0 text-gradient">
                                    <i class="fas fa-heart me-2"></i>
                                    Donate Now
                                </h4>
                            </div>
                            <div class="card-body p-3">
                                <form asp-controller="Donation" asp-action="ProcessDonation" method="post" id="donationForm">
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="Name" class="form-label small">
                                                <i class="fas fa-user me-1"></i>Full Name *
                                            </label>
                                            <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter your full name" required />
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="Email" class="form-label small">
                                                <i class="fas fa-envelope me-1"></i>Email *
                                            </label>
                                            <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="your@email.com" required />
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="Phone" class="form-label small">
                                                <i class="fas fa-phone me-1"></i>Phone *
                                            </label>
                                            <input asp-for="Phone" class="form-control form-control-sm" placeholder="+880 1XXX XXX XXX" required />
                                            <span asp-validation-for="Phone" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="DonationType" class="form-label small">
                                                <i class="fas fa-tag me-1"></i>Donation Type
                                            </label>
                                            <select asp-for="DonationType" class="form-select form-select-sm">
                                                <option value="General">General Donation</option>
                                                <option value="Healthcare">Healthcare Program</option>
                                                <option value="Education">Education Support</option>
                                                <option value="Emergency">Emergency Relief</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-2">
                                        <label asp-for="Address" class="form-label small">
                                            <i class="fas fa-map-marker-alt me-1"></i>Address
                                        </label>
                                        <textarea asp-for="Address" class="form-control form-control-sm" rows="1" placeholder="Your address (optional)"></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="Amount" class="form-label small">
                                                <i class="fas fa-rupee-sign me-1"></i>Donation Amount (BDT) *
                                            </label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">৳</span>
                                                <input asp-for="Amount" type="number" step="0.01" min="10" class="form-control" placeholder="1000" required />
                                            </div>
                                            <span asp-validation-for="Amount" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <label class="form-label small">
                                                <i class="fas fa-credit-card me-1"></i>Payment Method *
                                            </label>
                                            <div class="payment-methods-compact">
                                                <div class="payment-option-compact">
                                                    <input asp-for="PaymentMethod" type="radio" value="SSLCommerz" id="sslCommerz" class="payment-radio" checked>
                                                    <label for="sslCommerz" class="payment-label-compact">
                                                        <i class="fas fa-lock text-success"></i>
                                                        <span>Online Payment</span>
                                                    </label>
                                                </div>
                                                <div class="payment-option-compact">
                                                    <input asp-for="PaymentMethod" type="radio" value="Manual" id="manual" class="payment-radio">
                                                    <label for="manual" class="payment-label-compact">
                                                        <i class="fas fa-handshake text-primary"></i>
                                                        <span>Manual Payment</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-1">
                                        <label asp-for="Message" class="form-label small">
                                            <i class="fas fa-comment me-1"></i>Message (Optional)
                                        </label>
                                        <textarea asp-for="Message" class="form-control form-control-sm" rows="2" placeholder="Share why you're donating..."></textarea>
                                    </div>

                                    <div class="mb-2">
                                        <div class="form-check">
                                            <input asp-for="IsAnonymous" class="form-check-input" type="checkbox" id="anonymousCheck">
                                            <label class="form-check-label small" for="anonymousCheck">
                                                Make this donation anonymous
                                            </label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-gradient btn-sm w-100 py-2">
                                        <i class="fas fa-heart me-2"></i>
                                        Donate Now
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

