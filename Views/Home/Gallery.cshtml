<!-- Image Modal -->
<div id="imageModal" class="image-modal">
    <span class="modal-close">&times;</span>
    <div class="modal-content">
        <img class="modal-image" id="modalImage" src="" alt="" />
        <div class="modal-caption" id="modalCaption"></div>
    </div>
    <div class="modal-nav modal-prev" id="modalPrev">&#10094;</div>
    <div class="modal-nav modal-next" id="modalNext">&#10095;</div>
</div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            let currentImageIndex = 0;
            let visibleImages = [];

            // Gallery filtering functionality
            $('.gallery-nav .nav-link').click(function () {
                var filter = $(this).data('filter');
                $('.gallery-nav .nav-link').removeClass('active');
                $(this).addClass('active');
                
                if (filter === 'all') {
                    $('.gallery-item').fadeIn(300);
                } else {
                    $('.gallery-item').fadeOut(300);
                    setTimeout(function() {
                        $('.gallery-item[data-category="' + filter + '"]').fadeIn(300);
                    }, 300);
                }
            });
            
            // Add loading animation for images
            $('.gallery-item img').on('load', function() {
                $(this).css('opacity', '1');
            }).on('error', function() {
                $(this).parent().hide();
            });
            
            // Touch-friendly interactions for mobile
            if ('ontouchstart' in window) {
                $('.gallery-item').on('touchstart', function() {
                    $(this).addClass('touch-active');
                }).on('touchend', function() {
                    $(this).removeClass('touch-active');
                });
            }

            // Modal functionality
            function updateVisibleImages() {
                visibleImages = $('.gallery-item:visible').toArray();
            }

            function openModal(imageSrc, imageAlt, imageIndex) {
                currentImageIndex = imageIndex;
                $('#modalImage').attr('src', imageSrc);
                $('#modalCaption').text(imageAlt);
                $('#imageModal').fadeIn(300).addClass('show');
                $('body').css('overflow', 'hidden');
            }

            function closeModal() {
                $('#imageModal').removeClass('show').fadeOut(300);
                $('body').css('overflow', 'auto');
            }

            function showImage(index) {
                if (index >= 0 && index < visibleImages.length) {
                    currentImageIndex = index;
                    const $item = $(visibleImages[index]);
                    const $img = $item.find('img');
                    const src = $img.attr('src');
                    const alt = $img.attr('alt');
                    
                    $('#modalImage').attr('src', src);
                    $('#modalCaption').text(alt);
                }
            }

            // Click on gallery item to open modal
            $('.gallery-item').click(function() {
                updateVisibleImages();
                const index = visibleImages.indexOf(this);
                const $img = $(this).find('img');
                const src = $img.attr('src');
                const alt = $img.attr('alt');
                
                openModal(src, alt, index);
            });

            // Close modal
            $('.modal-close').click(closeModal);
            $('#imageModal').click(function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });

            // Navigation
            $('#modalPrev').click(function() {
                const prevIndex = currentImageIndex > 0 ? currentImageIndex - 1 : visibleImages.length - 1;
                showImage(prevIndex);
            });

            $('#modalNext').click(function() {
                const nextIndex = currentImageIndex < visibleImages.length - 1 ? currentImageIndex + 1 : 0;
                showImage(nextIndex);
            });

            // Keyboard navigation
            $(document).keydown(function(e) {
                if ($('#imageModal').is(':visible')) {
                    switch(e.keyCode) {
                        case 27: // Escape
                            closeModal();
                            break;
                        case 37: // Left arrow
                            $('#modalPrev').click();
                            break;
                        case 39: // Right arrow
                            $('#modalNext').click();
                            break;
                    }
                }
            });

            // Update visible images when filter changes
            $('.gallery-nav .nav-link').click(function() {
                setTimeout(updateVisibleImages, 600);
            });

            // Initial update of visible images
            updateVisibleImages();
        });
    </script>

