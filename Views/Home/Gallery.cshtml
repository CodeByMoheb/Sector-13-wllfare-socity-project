@{
    ViewData["Title"] = "Gallery";
}

    <style>
        .gallery-header{
            background-image: url('@Url.Content("~/Photos/gallerybg.png")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 200px;
            width: 100%;
            color: #ffffff;
            margin-bottom: 30px;
           
        }
        
        @@media (max-width: 768px) {
            .gallery-header {
                height: 150px;
                margin-top: 4rem;
            }
            .gallery-header h1 {
                font-size: 2rem !important;
                padding-top: 30px !important;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-header {
                height: 120px;
                margin-top: 4rem;
            }
            .gallery-header h1 {
                font-size: 1.5rem !important;
                padding-top: 20px !important;
            }
        }
        
        .container{
            margin-bottom: 50px;
            padding: 0 15px;
            margin-top: 30px;
        }
        
        .gallery-nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-bottom: 30px;
            font-size: 18px;
            font-weight: 600;
            flex-wrap: wrap;
        }
        
        @@media (max-width: 768px) {
           
            .gallery-nav {
                gap: 20px;
                font-size: 16px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-nav {
                gap: 15px;
                font-size: 14px;
                flex-direction: column;
                align-items: center;
            }
        }
        
        .gallery-nav .nav-link {
            color: #2d3e50;
            cursor: pointer;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        
        .gallery-nav .nav-link:hover {
            background-color: #f8f9fa;
            color: #00c86b;
        }
        
        .gallery-nav .active {
            color: #ffffff;
            background-color: #00c86b;
            border-bottom: none;
        }
        
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        @@media (max-width: 768px) {
            .gallery-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 15px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
        }
        
        .gallery-item {
            width: 100%;
            height: 200px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            background: #fff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        @@media (max-width: 768px) {
            .gallery-item {
                height: 180px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-item {
                height: 200px;
            }
        }
        
        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .gallery-item:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }

        .gallery-item:hover img {
            transform: scale(1.1);
        }
        
        /* Loading animation for images */
        .gallery-item img {
            opacity: 0;
            animation: fadeIn 0.5s ease forwards;
        }
        
        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
        
        /* Breadcrumb responsive */
        @@media (max-width: 480px) {
            .breadcrumb {
                font-size: 12px;
            }
        }
    </style>
}

<div class="container mt-5">
    <div class="gallery-header">
    <h1 class="text-center mb-2" style="font-size:3rem;font-weight:700;padding-top: 50px;">Gallery</h1>
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb justify-content-center">
            <li class="breadcrumb-item"><a href="/" style="color: #ffffff;">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="color: #afafaf;">Gallery</li>
        </ol>
    </nav>
    </div>
  
    <div class="gallery-nav mb-4">
        <a class="nav-link active" data-filter="all">All</a>
        <a class="nav-link" data-filter="socialwork">Social work</a>
        <a class="nav-link" data-filter="food">Food</a>
        <a class="nav-link" data-filter="healthcare">Healthcare</a>
        <a class="nav-link" data-filter="wintercare">Winter Care</a>
        <a class="nav-link" data-filter="other">Others</a>
    </div>

    <div class="gallery-grid">
        <!-- Social Work Images -->
        <div class="gallery-item" data-category="socialwork">
            <img src="@Url.Content("~/social/1.png")" alt="Social work 1" />
        </div>
        <div class="gallery-item" data-category="socialwork">
            <img src="@Url.Content("~/social/2.png")" alt="Social work 2" />
        </div>
        
        <!-- Food Images -->
        <div class="gallery-item" data-category="food">
            <img src="@Url.Content("~/slider/slider1.png")" alt="Food 1" />
        </div>
        <div class="gallery-item" data-category="food">
            <img src="@Url.Content("~/Health Care/2.jpeg")" alt="Food 2" />
        </div>
        
        <!-- Healthcare Images -->
        <div class="gallery-item" data-category="healthcare">
            <img src="@Url.Content("~/Health Care/1.jpeg")" alt="Healthcare 1" />
        </div>
        <div class="gallery-item" data-category="healthcare">
            <img src="@Url.Content("~/Health Care/2.jpeg")" alt="Healthcare 2" />
        </div>
        <div class="gallery-item" data-category="healthcare">
            <img src="@Url.Content("~/Health Care/3.jpeg")" alt="Healthcare 3" />
        </div>
        <div class="gallery-item" data-category="healthcare">
            <img src="@Url.Content("~/Health Care/4.png")" alt="Healthcare 4" />
        </div>
        
        <!-- Winter Care Images -->
        <div class="gallery-item" data-category="wintercare">
            <img src="@Url.Content("~/slider/slider2.png")" alt="Winter Care 1" />
        </div>
        
        <!-- Other Images -->
        <div class="gallery-item" data-category="other">
            <img src="@Url.Content("~/Others/1.png")" alt="Other 1" />
        </div>
        <div class="gallery-item" data-category="other">
            <img src="@Url.Content("~/Others/2.png")" alt="Other 2" />
        </div>
        <div class="gallery-item" data-category="other">
            <img src="@Url.Content("~/Others/3.png")" alt="Other 3" />
        </div>
    </div>
</div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            // Gallery filtering functionality
            $('.gallery-nav .nav-link').click(function () {
                var filter = $(this).data('filter');
                $('.gallery-nav .nav-link').removeClass('active');
                $(this).addClass('active');
                
                if (filter === 'all') {
                    $('.gallery-item').fadeIn(300);
                } else {
                    $('.gallery-item').fadeOut(300);
                    setTimeout(function() {
                        $('.gallery-item[data-category="' + filter + '"]').fadeIn(300);
                    }, 300);
                }
            });
            
            // Add loading animation for images
            $('.gallery-item img').on('load', function() {
                $(this).css('opacity', '1');
            }).on('error', function() {
                $(this).parent().hide();
            });
            
            // Touch-friendly interactions for mobile
            if ('ontouchstart' in window) {
                $('.gallery-item').on('touchstart', function() {
                    $(this).addClass('touch-active');
                }).on('touchend', function() {
                    $(this).removeClass('touch-active');
                });
            }
        });
    </script>

