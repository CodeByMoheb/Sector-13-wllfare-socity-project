@{
    ViewData["Title"] = "Gallery";
}

    <style>
        .gallery-header{
            background-image: url('https://res.cloudinary.com/ddl4hnmnz/image/upload/v1752470483/gallerybg_mbcqtl.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 200px;
            width: 100%;
            color: #ffffff;
            margin-bottom: 30px;
           
        }
        
        @@media (max-width: 768px) {
            .gallery-header {
                height: 150px;
                margin-top: 4rem;
            }
            .gallery-header h1 {
                font-size: 2rem !important;
                padding-top: 30px !important;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-header {
                height: 120px;
                margin-top: 4rem;
            }
            .gallery-header h1 {
                font-size: 1.5rem !important;
                padding-top: 20px !important;
            }
        }
        
        .container{
            margin-bottom: 50px;
            padding: 0 15px;
            margin-top: 30px;
        }
        
        .gallery-nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-bottom: 30px;
            font-size: 18px;
            font-weight: 600;
            flex-wrap: wrap;
        }
        
        @@media (max-width: 768px) {
           
            .gallery-nav {
                gap: 20px;
                font-size: 16px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-nav {
                gap: 15px;
                font-size: 14px;
                flex-direction: column;
                align-items: center;
            }
        }
        
        .gallery-nav .nav-link {
            color: #2d3e50;
            cursor: pointer;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        
        .gallery-nav .nav-link:hover {
            background-color: #f8f9fa;
            color: #00c86b;
        }
        
        .gallery-nav .active {
            color: #ffffff;
            background-color: #00c86b;
            border-bottom: none;
        }
        
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        @@media (max-width: 768px) {
            .gallery-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 15px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
        }
        
        .gallery-item {
            width: 100%;
            height: 200px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            background: #fff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }
        
        @@media (max-width: 768px) {
            .gallery-item {
                height: 180px;
            }
        }
        
        @@media (max-width: 480px) {
            .gallery-item {
                height: 200px;
            }
        }
        
        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .gallery-item:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }

        .gallery-item:hover img {
            transform: scale(1.1);
        }
        
        /* Loading animation for images */
        .gallery-item img {
            opacity: 0;
            animation: fadeIn 0.5s ease forwards;
        }
        
        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
        
        /* Breadcrumb responsive */
        @@media (max-width: 480px) {
            .breadcrumb {
                font-size: 12px;
            }
        }

        /* Modal Styles */
        .image-modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(5px);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .image-modal.show {
            opacity: 1;
        }

        .modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.7);
            max-width: 90%;
            max-height: 90%;
            transition: transform 0.3s ease;
        }

        .image-modal.show .modal-content {
            transform: translate(-50%, -50%) scale(1);
        }

        .modal-image {
            width: 100%;
            height: auto;
            max-height: 80vh;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .modal-close {
            position: absolute;
            top: 20px;
            right: 30px;
            color: #f1f1f1;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.3s ease;
            z-index: 10000;
        }

        .modal-close:hover,
        .modal-close:focus {
            color: #bbb;
            text-decoration: none;
        }

        .modal-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 15px 10px;
            cursor: pointer;
            border-radius: 50%;
            font-size: 24px;
            transition: background 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .modal-nav:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        .modal-prev {
            left: 20px;
        }

        .modal-next {
            right: 20px;
        }

        .modal-caption {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            text-align: center;
            background: rgba(0, 0, 0, 0.7);
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 16px;
            backdrop-filter: blur(10px);
        }

        @@media (max-width: 768px) {
            .modal-close {
                top: 10px;
                right: 15px;
                font-size: 30px;
            }

            .modal-nav {
                padding: 10px 8px;
                font-size: 18px;
            }

            .modal-prev {
                left: 10px;
            }

            .modal-next {
                right: 10px;
            }

            .modal-caption {
                bottom: 10px;
                font-size: 14px;
                padding: 8px 15px;
            }
        }
    </style>
}

