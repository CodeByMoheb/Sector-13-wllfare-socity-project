<style>
    .gallery-navbar {
        background: #fff;
        border-bottom: 1.5px solid #e5e5e5;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 1rem 0;
        margin-bottom: 2rem;
    }
    .gallery-nav-container {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 0 15px;
    }
    .gallery-breadcrumb {
        font-size: 0.95rem;
        color: #888;
    }
    .gallery-breadcrumb a {
        color: #3498db;
        text-decoration: none;
        margin-right: 5px;
    }
    .gallery-breadcrumb span {
        margin: 0 5px;
    }
    .gallery-nav {
        display: flex;
        gap: 0.7rem;
        flex-wrap: wrap;
    }
    .gallery-nav-btn {
        background: #f2f2f2;
        color: #23272b;
        border: none;
        border-radius: 6px;
        padding: 8px 18px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s, color 0.2s;
    }
    .gallery-nav-btn.active, .gallery-nav-btn:hover {
        background: #5b3fa2;
        color: #fff;
    }
    .gallery-section {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 15px 40px 15px;
    }
    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* 4 columns for All view */
        gap: 24px;
    }
    .gallery-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(44,62,80,0.06);
        overflow: hidden;
        transition: box-shadow 0.2s, transform 0.2s;
    }
    .gallery-item:hover {
        box-shadow: 0 8px 32px rgba(44,62,80,0.12);
        transform: translateY(-4px) scale(1.02);
    }
    .gallery-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        background: #eee;
    }
    @@media (max-width: 992px) {
        .gallery-grid {
            grid-template-columns: repeat(2, 1fr); /* 2 columns on tablets */
        }
    }
    @@media (max-width: 600px) {
        .gallery-grid {
            grid-template-columns: 1fr; /* 1 column on mobile */
        }
        .gallery-navbar, .gallery-section {
            padding: 0 5px;
        }
    }
</style>

