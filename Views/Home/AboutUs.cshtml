        <!-- Core Values Cards -->
        <div class="values-container">
            <div class="value-card" style="position: relative;">
                <button class="lang-toggle-btn" data-target="compassion" style="position: absolute; top: 16px; right: 16px; border: none; background: #f1f1f1; border-radius: 50%; width: 36px; height: 36px; font-weight: bold; cursor: pointer;">EN</button>
